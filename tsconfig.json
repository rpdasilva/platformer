{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom", "es6", "es2017.object"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
